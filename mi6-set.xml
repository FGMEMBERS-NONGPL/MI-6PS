	      <tank n="10">
		<tank-num type="int">10</tank-num>
		<kill-when-empty type="bool">false</kill-when-empty>
	      </tank>
	      <tank n="11">
		<tank-num type="int">11</tank-num>
		<kill-when-empty type="bool">false</kill-when-empty>
	      </tank>
	      <tank n="12">
		<tank-num type="int">12</tank-num>
		<kill-when-empty type="bool">false</kill-when-empty>
	      </tank>
	      
	      </fuel>
	    </consumables>    
	      
</PropertyList>
