<PropertyList>
 <path>weight.ac</path>

 
 
  <!--Lights-->
                                   
 <animation>   
   <object-name>group</object-name>
   <object-name>rect1</object-name>
   
</animation>

  <animation>
    <type>material</type>
    <object-name>group</object-name>
   <object-name>rect1</object-name>
   
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>

 
 <animation>
  <type>rotate</type>
  <object-name>rect1</object-name>
  <property>yasim/gross-weight-lbs</property>
  <interpolation>
   <entry><ind>  0.0</ind><dep>/0</dep></entry>    
   <entry><ind> 93700</ind><dep>  310</dep></entry>
   <entry><ind> 97500</ind><dep>  360</dep></entry>
  </interpolation>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0</y-m>
   <z-m>0.0</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
 
 <animation>
  <type>scale</type>
  <object-name>group</object-name>
   <object-name>rect1</object-name>  
  <property>sim/signals/fdm-initialized</property>
  <offset>0.7</offset>
  <x-max>0.7</x-max>
  <y-max>0.7</y-max>
  <z-max>0.7</z-max>
  <x-factor>0.7</x-factor>
  <y-factor>0.7</y-factor>
  <z-factor>0.7</z-factor>
 </animation>
 
</PropertyList>

